$sans_serif: 'Helvetica Neue', Helvetica, Arial, sans-serif
$serif: georgia, serif

@mixin columns($count, $width, $gap)
  column-count: $count
  column-width: $width
  column-gap: $gap
  -moz-column-count: $count
  -moz-column-width: $width
  -moz-column-gap: $gap
  -webkit-column-count: $count
  -webkit-column-width: $width
  -webkit-column-gap: $gap

body
  background: #fff
  color: #000
  font-family: $sans_serif
  font-size: 22px
  font-weight: 200
  //font-family: $serif
  //font-size: 18px
  line-height: 1.5em
  margin: 30px 40px

h1, h2, h3, h4, h5
  font-family: 'Raleway', $sans_serif
  font-weight: 300
  line-height: 1.2em

h1
  font-size: 80px
  margin: 60px 0

p
  margin: 16px 0

#wrapper

  #content
    @include columns(2, 400px, 40px)
